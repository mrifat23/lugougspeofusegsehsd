    <script>
        // Initialize AOS (Animate on Scroll)
        AOS.init({
            duration: 800,
            once: true,
            offset: 50,
        });

        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('bg-black', 'bg-opacity-80', 'backdrop-blur-sm', 'shadow-lg', 'scrolled');
            } else {
                navbar.classList.remove('bg-black', 'bg-opacity-80', 'backdrop-blur-sm', 'shadow-lg', 'scrolled');
            }
        });
        
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu on link click
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });

        // Counter animation for ROI section
        function animateValue(obj, start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                
                if (obj.id === 'roi-visibility') {
                    obj.innerHTML = `${value}x`;
                } else {
                    obj.innerHTML = `${value}%`;
                }

                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }

        const roiSection = document.getElementById('roi');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateValue(document.getElementById('roi-customers'), 0, 50, 2000);
                    animateValue(document.getElementById('roi-visibility'), 0, 3, 2000);
                    animateValue(document.getElementById('roi-revenue'), 0, 20, 2000);
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        observer.observe(roiSection);

    </script>

